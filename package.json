{
  "name": "sjer.red",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "lint": "eslint --cache && prettier --check . && markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:fix": "eslint --cache --fix && prettier -w . && markdownlint-cli2 --fix '**/*.md' '#node_modules'",
    "prepare": "husky"
  },
  "overrides": {
    "astro-icon": {
      "@iconify/tools": "^4.0.0"
    },
    "truncate-html": {
      "cheerio": "1.0.0-rc.12"
    }
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/mdx": "^3.1.6",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource-variable/lora": "^5.1.0",
    "@fontsource/ibm-plex-serif": "^5.1.0",
    "@fontsource/nunito": "^5.1.0",
    "@iconify-json/mdi": "^1.2.0",
    "@shikijs/twoslash": "^1.16.3",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/jsdom": "^21.1.7",
    "astro": "^4.15.5",
    "astro-diagram": "^0.7.0",
    "astro-icon": "^1.1.1",
    "astro-opengraph-images": "^1.11.3",
    "astro-seo": "^0.8.4",
    "jsdom": "^25.0.0",
    "markdown-it": "^14.1.0",
    "react": "^18.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "remark-toc": "^9.0.0",
    "remeda": "^2.12.1",
    "sass": "^1.78.0",
    "tailwindcss": "^3.4.11",
    "ts-pattern": "^5.3.1",
    "webring": "^1.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@playwright/test": "^1.47.0",
    "@types/eslint__js": "^8.42.3",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^18.3.5",
    "@types/sanitize-html": "^2.13.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-plugin-astro": "^1.2.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "markdownlint-cli2": "^0.14.0",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write",
    "*.md": "markdownlint-cli2 --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "write"
        ]
      ]
    }
  },
  "prettier": {
    "printWidth": 120
  }
}
