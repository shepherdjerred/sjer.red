{
  "name": "sjer.red",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "lint": "eslint --cache && prettier --check . && markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:fix": "eslint --cache --fix && prettier -w . && markdownlint-cli2 --fix '**/*.md' '#node_modules'",
    "prepare": "husky"
  },
  "dependencies": {
    "@sentry/browser": "^9.3.0",
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@fontsource-variable/lora": "^5.2.5",
    "@fontsource/nunito": "^5.2.5",
    "@iconify-json/mdi": "^1.2.3",
    "@shikijs/twoslash": "^3.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.0.15",
    "@types/jsdom": "^27.0.0",
    "astro": "^5.5.2",
    "astro-diagram": "^0.7.0",
    "astro-icon": "^1.1.5",
    "astro-opengraph-images": "^1.12.1",
    "astro-seo": "^1.0.0",
    "jsdom": "^27.0.0",
    "markdown-it": "^14.1.0",
    "react": "^19.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-mermaid": "^3.0.0",
    "remark-toc": "^9.0.0",
    "remeda": "^2.21.2",
    "sass": "^1.85.1",
    "tailwindcss": "^4.0.15",
    "ts-pattern": "^5.6.2",
    "webring": "^1.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@playwright/test": "^1.51.0",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.0.10",
    "@types/sanitize-html": "^2.13.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write",
    "*.md": "markdownlint-cli2 --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "write"
        ]
      ]
    }
  },
  "prettier": {
    "printWidth": 120
  }
}
