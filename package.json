{
  "name": "sjer.red",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "lint": "eslint . --ext .js,.jsx,ts,tsx,astro && prettier --check . && markdownlint-cli2 '**/*.md' '#node_modules'",
    "lint:fix": "eslint . --ext .js,.jsx,ts,tsx,astro --fix && prettier -w . && markdownlint-cli2 --fix '**/*.md' '#node_modules'",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.8.3",
    "@astrojs/mdx": "^3.1.3",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@fontsource/ibm-plex-serif": "^5.0.13",
    "@fontsource/nunito": "^5.0.18",
    "@iconify-json/mdi": "^1.1.67",
    "@shikijs/twoslash": "^1.12.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/jsdom": "^21.1.7",
    "astro": "^4.12.2",
    "astro-icon": "^1.1.0",
    "astro-opengraph-images": "^1.8.1",
    "astro-seo": "^0.8.4",
    "jsdom": "^24.1.1",
    "markdown-it": "^14.1.0",
    "react": "^18.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "remark-toc": "^9.0.0",
    "remeda": "^2.6.0",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.7",
    "ts-pattern": "^5.2.0",
    "webring": "^1.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@playwright/test": "^1.45.3",
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^18.3.3",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.7",
    "markdownlint-cli2": "^0.13.0",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write",
    "*.md": "markdownlint-cli2 --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "write"
        ]
      ]
    }
  },
  "prettier": {
    "printWidth": 120
  }
}
