---
type Props = {
  date: Date;
  showTime?: boolean;
}

const { date, showTime } = Astro.props;

const options: Intl.DateTimeFormatOptions = showTime
  ? {
      year: "numeric",
      month: "short",
      day: "numeric",
      weekday: "short",
      hour: "numeric",
      minute: "numeric",
    }
  : {
      year: "numeric",
      month: "short",
      day: "numeric",
      weekday: "short",
    };
---

<time datetime={date.toISOString()}>
  {date.toLocaleDateString("en-us", options)}
</time>
