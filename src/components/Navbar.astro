---
import Container from "./Container.astro";
import NavbarItem from "./NavbarItem.astro";
const pathname = new URL(Astro.request.url).pathname;
---

<nav class="bg-black text-white">
  <Container width="wide-mobile">
    <ul class="flex flex-wrap content-center place-content-center sm:justify-start gap-2 p-2">
      <NavbarItem href="/" isHighlighted={pathname === "/"}>Home</NavbarItem>
      <NavbarItem href="/blog/" isHighlighted={pathname.includes("blog")}>Blog</NavbarItem>
      <NavbarItem href="/links/" isHighlighted={pathname === "/links/"}>Links</NavbarItem>
      <NavbarItem href="/now/" isHighlighted={pathname === "/now/"}>Now</NavbarItem>
      <NavbarItem href="/gatech/" isHighlighted={pathname === "/gatech/"}>Georgia Tech</NavbarItem>
    </ul>
  </Container>
</nav>
